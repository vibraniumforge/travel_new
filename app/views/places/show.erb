<h1>Show a Place</h1>
<p>Continent: <%= @place.continent %> </p>
<p>Country: <%= @place.country %> </p>
<p>State/Province: <%= @place.state %> </p>
<p>City: <%= @place.city %></p>
<p>Notes: <%= @place.notes %> </p>
<br>
<hr>
<form method="GET" action="/places/<%= @place.id %>/edit">
  <input type = "submit" value="Edit Place">
</form>

<form method="POST" action="/places/<%= @place.id %>/delete">
  <input type = "hidden" id="hidden" name="_method" value="delete"/>
  <input type = "submit" value="Delete Place"/>
</form>
